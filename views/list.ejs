                            <button class = "btn btn-primary btn-sm" >Log Out</button>
                        </div>
                    </div>
    
                </h2>
            
             
            
            </div>
        </div>
               
                
      
    </div>
</div>

<div class = "container-fluid"id = "two">
    <ul class = "list-group" id = "added"> 
        <%- include("partials/template.ejs", { item: tasks, username }) %>
    </ul>

    <form action = /addTask method = "POST">
        <div class ="input-group mb-3"  >
            <input type = "text" class="form-control border border-gray" placeholder="New Task" id = "task" name = "task"><br>                    
            <button type="submit" class="btn btn-outline-secondary">Add</button><br>            
        
        </div>
    </form>
 
   
    <button type="submit" class="btn btn-outline-secondary">Remove Complete</button><br>              
    
</div>


